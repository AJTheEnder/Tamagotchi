<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center|center_horizontal|center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textHome"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        android:text="Gameplay"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imageProgrammer"
        android:layout_width="258dp"
        android:layout_height="232dp"
        android:src="@drawable/coder_pnen" />

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="411dp"
        android:layout_height="120dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="MSG"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:gravity="center|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textProductivite"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="Prod"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textEnergie"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:text="POOOWERR"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEnergiser"
            android:layout_width="128dp"
            android:layout_height="70dp"
            android:layout_marginBottom="0dp"
            android:text="Ã‰negiser" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="88dp"
            android:text="Pause" />

        <Button
            android:id="@+id/btnMenacer"
            android:layout_width="132dp"
            android:layout_height="70dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="0dp"
            android:text="Menacer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pnl2_btnGoToPnl1"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_marginBottom="0dp"
            android:text="Page 1" />

        <Button
            android:id="@+id/pnl2_btnGoToPnl3"
            android:layout_width="211dp"
            android:layout_height="75dp"
            android:layout_marginBottom="0dp"
            android:text="Page 3" />
    </LinearLayout>

</LinearLayout>